<%= form_for(@booking) do |f| %>
  <% if @booking.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@booking.errors.count, "error") %> <%= t('bookings.error')%></h2>

      <ul>
      <% @booking.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label t('bookings.room') %><br />
    <%= f.number_field :room_id %>
  </div>

    <!--TODO-->
   <% if current_user.try(:admin?) %>
        <div class="field">
          <%= f.label t('user') %><br />
          <%= f.number_field :user_id %>
        </div>
   <% end %>

  <div class="field">
    <%= f.label t('entry') %><br />
    <%= f.date_select :entry %>
  </div>
  <div class="field">
    <%= f.label t('final') %><br />
    <%= f.date_select :final %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
