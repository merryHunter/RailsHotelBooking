<h1>Listing rooms</h1>

<table>
  <tr>
    <th>Number</th>
    <th>Persons</th>
    <th>Type</th>
    <th>Price</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @rooms.each do |room| %>
  <tr>
    <td><%= room.number %></td>
    <td><%= room.persons %></td>
    <td><%= @apartment_hash[room.type_id.to_s] %></td>
    <td><%= room.price %></td>
    <td><%= link_to 'Show', room %></td>
    <td><%= link_to 'Edit', edit_room_path(room) %></td>
    <td><%= link_to 'Destroy', room, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

