<%= form_for(@request) do |f| %>
  <% if @request.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@request.errors.count, "error") %> <%= t('requests.error')%>:</h2>

      <ul>
      <% @request.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>



  <div class="field">
    <%= f.label t('name') %><br />
    <%= f.text_field :name %>
  </div>
    <%= t('apartments.type')%>:
    <div class="field">
      <%= select_tag 'type_id',
                     options_from_collection_for_select(@apartment_types, 'id', 'title') %>
    </div>
    <div class="field">
      <%= f.label t('requests.persons') %><br />
      <%= f.number_field :persons %>
    </div>
    <div class="field">
      <%= f.label t('entry') %><br />
      <%= f.date_select :entry %>
    </div>
    <div class="field">
      <%= f.label t('final') %><br />
      <%= f.date_select :final %>
    </div>
  <div class="field">
    <%= f.label t('requests.comment') %><br />
    <%= f.text_area :comment %>
  </div>

  <div class="actions">
    <%= f.submit t('submit') %>
  </div>
<% end %>
