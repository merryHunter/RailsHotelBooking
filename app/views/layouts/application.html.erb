<!DOCTYPE html>
<html>
<head>
  <title>Hotel</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body class="<%= controller.controller_name %>">
<div id="banner">
  <%= image_tag("logo.png") %>
  <%= @page_title || "Pragmatic Bookshelf" %>
</div>
<div id="columns">
  <div id="side">

    <!--authorized user section-->
    <% if user_signed_in? %>
        <h3 style="color: white"> <strong><%= current_user.email %></strong></h3><br/>
        <%= link_to "My bookings", bookings_path %> <br/>
        <%= link_to "Book room", profile_book_path %> <br/>
        <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %><br/>

        <!--admin section-->

        <% if current_user.admin? %>
            <br/><h2 style="color: white">Admin:</h2>
              <%= link_to "Apartments", apartment_types_path %> <br/>
              <%= link_to "Rooms", rooms_path %><br/>
              <%= link_to "Requests", requests_path %><br/>
              <%= link_to "Bookings", bookings_path %><br/>
        <% end %>


    <% else %>
        <!--unathorized section-->

        <%= link_to "Sign up", new_user_registration_path, :class => 'navbar-link'  %> <br/>
        <%= link_to "Login", new_user_session_path, :class => 'navbar-link'  %><br/>

    <% end %>

  </div>
  <div id="main">
    <%= yield %>
  </div>
</div>
</body>
</html>
